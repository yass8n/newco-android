<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/newco_mobile"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/back_button_overlay"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nav_button_overlay"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/company_profile_gradient"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:id="@+id/co_logo"
                        android:background="@drawable/ubuntu"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <co.newco.newco_android.objects.fTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/co_quote"
                        android:text="'The leading OS for PC, tablet, phone and cloud'"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <View
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:contentDescription="@string/gray_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        >

                        <co.newco.newco_android.objects.fTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/co_snapshots"
                            android:text="@string/snapshots"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:textAllCaps="true"
                            />

                        <!-- These buttons will be replaced by API call -->
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dp"
                            android:minHeight="20dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/transparent_grey_outlined_button"
                            android:textColor="@color/gray"
                            android:text="Web"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:textSize="12dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dp"
                            android:minHeight="20dp"
                            android:background="@drawable/transparent_grey_outlined_button"
                            android:textColor="@color/gray"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Mobile"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:textSize="12dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dp"
                            android:minHeight="20dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/transparent_grey_outlined_button"
                            android:textColor="@color/gray"
                            android:text="Tech"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:textSize="12dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        >

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_top_bottom_right_grey"
                            android:padding="15dp"
                            android:orientation="vertical"
                            >

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/founders"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                >

                                <include layout="@layout/profile_picture"/>
                                <include layout="@layout/profile_picture"/>
                                <include layout="@layout/profile_picture"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_top_bottom_grey"
                            android:padding="15dp"
                            android:orientation="vertical"
                            >

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recent Investors"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                >

                                <include layout="@layout/profile_picture"/>
                                <include layout="@layout/profile_picture"/>
                                <include layout="@layout/profile_picture"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="20dp"
                        >

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_bottom_right_grey"
                            android:padding="15dp"
                            android:orientation="vertical"
                            >

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Funding"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                />

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/co_funding"
                                android:text="$15M"
                                android:textAllCaps="true"
                                android:textSize="15dp"
                                android:textColor="@color/app_green"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_bottom_right_grey"
                            android:orientation="vertical"
                            android:padding="15dp"
                            >

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reach"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                />

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/co_reach"
                                android:text="63.5M"
                                android:textAllCaps="true"
                                android:textSize="15dp"
                                android:textColor="@color/app_green"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_bottom_grey"
                            android:orientation="vertical"
                            android:padding="15dp"
                            >

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customers"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                />

                            <co.newco.newco_android.objects.fTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/co_customers"
                                android:text="63.5M"
                                android:textAllCaps="true"
                                android:textSize="15dp"
                                android:textColor="@color/app_green"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Sessions"
                    android:id="@+id/list_title"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_marginBottom="15dp"
                    />

                <include layout="@layout/horizontal_bar"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/session_title"
                    android:textColor="@color/gray"
                    android:layout_marginTop="20dp"
                    custom:typeface="bold"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/co_session_title"
                    android:text="PC, Mac and Beyond"
                    android:textColor="@color/app_green"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Date"
                    android:textColor="@color/gray"
                    android:layout_marginTop="7dp"
                    custom:typeface="bold"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/co_session_date"
                    android:text="Thursday, May 29"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="7dp"
                    android:textSize="17dp"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Time"
                    android:textColor="@color/gray"
                    android:layout_marginTop="7dp"
                    custom:typeface="bold"
                    />

                <co.newco.newco_android.objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/co_session_time"
                    android:text="10 - 11 AM"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="7dp"
                    android:textSize="17dp"
                    />

                <include layout="@layout/horizontal_bar"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <co.newco.newco_android.objects.fTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:text="Availability"
                        android:textColor="@color/gray"
                        android:layout_marginTop="20dp"
                        custom:typeface="bold"
                        android:layout_marginRight="15dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:minHeight="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/rounded_orange_button"
                        android:textColor="@color/black"
                        android:text="Almost Full"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:minHeight="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/rounded_orange_button"
                    android:textColor="@color/black"
                    android:text="Almost Full"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/app_green"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v4.view.ViewPager>

            </LinearLayout>

            <include layout="@layout/title_and_listview"
                android:id="@+id/jobs_feed"/>
            <include layout="@layout/title_and_listview"
                android:id="@+id/news_feed"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
