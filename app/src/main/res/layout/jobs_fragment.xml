<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_title"
        android:layout_gravity="fill"
        android:text="Customer Experience Specialist"
        android:autoLink="web"
        android:textSize="17sp"
        android:gravity="start|center"
        android:layout_marginLeft="13sp"
        android:layout_marginStart="13sp"
        android:layout_marginEnd="13sp"
        android:layout_marginRight="13sp"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:id="@+id/job_length"
            android:text="Full Time"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="start|center"
            android:layout_marginLeft="13sp"
            android:layout_marginStart="13sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226;"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:id="@+id/job_city"
            android:text="New York City"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="start|center"
            android:layout_marginLeft="5sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226;"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:id="@+id/job_department"
            android:text="Hardware Engineer"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="start|center"
            android:layout_marginLeft="5sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            />
    </LinearLayout>

</LinearLayout>